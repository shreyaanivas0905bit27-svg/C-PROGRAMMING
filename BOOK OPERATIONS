{
int i,flag;
for(i=0;i<3;i++)
{
if(bookno==books[i])
{
cout<<"book available"<<endl;
}
else
{
cout<<"book not available"<<endl;
}
}
return 0;
}
};
int main()
{
int books[3]={1,2,3};
