#include<iostream>
using namespace std;

int main()
{
    int** mata;
    int** matb;
    int** resa;
    int** ress;
    int n, i, j;

    cout << "n: ";
    cin >> n;

    // Allocate memory for matrices
    mata = new int*[n];
    matb = new int*[n];
    resa = new int*[n];
    ress = new int*[n];

    for (i = 0; i < n; i++) {
        mata[i] = new int[n];
        matb[i] = new int[n];
        resa[i] = new int[n];
        ress[i] = new int[n];
    }

    // Input for matrix A
    cout << "Enter elements of Matrix A:\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            cout << "A[" << i << "][" << j << "]: ";
            cin >> mata[i][j];
        }
    }

    // Input for matrix B
    cout << "Enter elements of Matrix B:\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            cout << "B[" << i << "][" << j << "]: ";
            cin >> matb[i][j];
        }
    }

    // Addition and subtraction of matrices
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            resa[i][j] = mata[i][j] + matb[i][j];
            ress[i][j] = mata[i][j] - matb[i][j];
        }
    }

    // Display addition result
    cout << "Matrix Addition (A + B):\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            cout << resa[i][j] << " ";
        }
        cout << endl;
    }

    // Display subtraction result
    cout << "Matrix Subtraction (A - B):\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            cout << ress[i][j] << " ";
        }
        cout << endl;
    }

    // Free dynamically allocated memory
    for (i = 0; i < n; i++) {
        delete[] mata[i];
        delete[] matb[i];
        delete[] resa[i];
        delete[] ress[i];
    }
    delete[] mata;
    delete[] matb;
    delete[] resa;
    delete[] ress;

    return 0;
}
